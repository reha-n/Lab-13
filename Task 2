#include <iostream>
using namespace std;

int main() {
    int a;

    cout << "Enter a number: ";
    cin >> a;

    for (int i = 1; i <= a; i++) {
        if (i % 2 == 0) {
            cout << i << " is even" << endl;
        } else {
            cout << i << " is odd" << endl;
        }
    }
        if (a <= 0) {
        cout << "Invalid input!" << endl;
        }
    

    return 0;
}
